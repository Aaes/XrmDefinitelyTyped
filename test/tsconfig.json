{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "removeComments": false,
        "experimentalDecorators": true,
        "declaration": true,
        "outDir": "build",
        "sourceMap": true,
        "lib": [
            "dom", "es5", "es2015.promise"
        ]
    },
    "include": [
        "src/**/*",
        "typings/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}